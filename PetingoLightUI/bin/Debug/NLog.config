<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<target name="appdata" xsi:type="File" layout="${longdate} | ${level:uppercase=true:padding=-5} | ${message}"
				fileName="${specialfolder:folder=LocalApplicationData}/SilverTabbyCat/Petinglite3000/Logs/CURRENT_LOGFILE.log"
				archiveFileName="${specialfolder:folder=LocalApplicationData}/SilverTabbyCat/Petinglite3000/Logs/LOGFILE.{#}.log"
				archiveEvery="Day" archiveNumbering="Rolling" maxArchiveFiles="7" concurrentWrites="true" />
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="appdata"/>
	</rules>
</nlog>
